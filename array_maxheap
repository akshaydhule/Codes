//============================================================================
// Name        : array_maxheap.cpp
// Description : Print array in max heap
//============================================================================

#include <iostream>
using namespace std;

void heapify (int *a, int i, int n)
{
	int j;
	int temp;
	temp = a[i];
	j = 2*i;
	while (j<n)
	{
		if (j<n && a[j+1]>a[j])
		{
			j=j+1;
		}
		if (temp>a[j])
		{
			break;
		}
		if (a[j]>temp)
		{
			a[j/2] = a[j];
			j=2*j;
		}
	}
	a[j/2] = temp;
}
void buildheap(int *a, int n)
{
	int i;
	for (i=n/2;i>=0;i--)
	{
		heapify(a,i,n);
	}
}

int main() {
	int a[] = {1,4,3,2,7,6,0,9,5};
	int n = sizeof(a)/ sizeof (a[0]);
	for (int i=0;i<n;i++)
		{
			cout<< a[i] <<", ";
		}
	cout << "\n";
	buildheap(a,n);
	for (int i=0;i<n;i++)
	{
		cout<< a[i] <<", ";
	}
	return 0;
}
