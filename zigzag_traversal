//============================================================================
// Name        : zigzag.cpp
// Description : zigzag traversal
//============================================================================

#include <iostream>
#include <cstdlib>
#include <cmath>
#include <algorithm>
using namespace std;

void zigzag(double mat[][8])
{
	int i = 0, j = 0;
	//for upper left triangle of matrix
	do
	{
		j++;
		cout<< mat[i][j];
		while (j != 0)
		{
			i++;
			j--;
			cout<< mat[i][j];
		}
		i++;
		if (i > 7)
		{
			i--;
			break;
		}
		cout<< mat[i][j];
		while (i != 0)
		{
			i--;
			j++;
      cout<< mat[i][j];
    }
	} while (true);

	//for lower right triangle of matrix
	do
	{
		j++;
		cout<< mat[i][j];
		while (j != 7)
		{
			j++;
			i--; 
			cout<< mat[i][j];
		}
		i++; 
		if (i > 7)
		{
			i--;
			break;
		}
		cout<< mat[i][j];
		while (i != 7)
		{
			i++;
			j--; 
			cout<< mat[i][j];
		}
	} while (true);
}


int main() {
	double dct_mat[8][8];
	int k=0;
	for(int i=0;i<8;i++)
		for(int j=0;j<8;j++)
		{  dct_mat[i][j] = k;k++;
		}
	zigzag(dct_mat);
}
