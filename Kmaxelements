#include<iostream>
#include<cstdio>
using namespace std;

void swap(int* a, int* b)
{
	int t = *a;
	*a = *b;
	*b = t;
}

int partition (int arr[], int l, int h)
{
	int x = arr[h]; // pivot
	int i = (l - 1); // Index of smaller element

	for (int j = l; j <= h- 1; j++)
	{
		if (arr[j] >= x)
		{
			i++; 
			swap(&arr[i], &arr[j]);
		}
	}
	swap(&arr[i + 1], &arr[h]); 
	return (i + 1);
}

void quickSort(int arr[], int l, int h, int k)
{
	if (l < h)
	{
		int p = partition(arr, l, h); 
		quickSort(arr, l, p - 1,k);
		if(p<k)
		{    
		    quickSort(arr, p + 1, h,k);
		}
	}
}

int main()
{
	int arr[] = {10, 7, 8, 9, 1, 5};
	int n = sizeof(arr)/sizeof(arr[0]);
	int k=3;
	quickSort(arr, 0, n-1,k);
	printf("Sorted array: \n");
	for(int i=0;i<k;i++)
	{
	    cout<<arr[i]<<" ";
	}
	return 0;
}
